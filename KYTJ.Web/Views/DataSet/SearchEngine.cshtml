@{
    ViewBag.Title = "SearchEngine";
    Layout = "~/Views/Shared/_TableLayout.cshtml";
}

<div id="mainArea">
    <el-col :span="24">
        <div>
            <el-col :span="6">
                <el-input v-model="dataName"
                          placeholder="数据源名称"></el-input>
            </el-col>
            <el-col :span="4">
                <el-button v-on:click="onSearch" type="primary">搜索</el-button>
            </el-col>
            <el-col :span="14" class="text-right">

            </el-col>
        </div>
        <div style="margin-top:10px">
            <el-table v-bind:data="searchEngineDataList"
                      v-loading="loading"
                      style="width: 100%">
                <el-table-column prop="dataName"
                                 label="数据源名称" min-width="20%">
                </el-table-column>

                <el-table-column prop="userName"
                                 label="创建人" min-width="10%">
                </el-table-column>

                <el-table-column prop="createTime"
                                 label="创建时间" min-width="15%">
                </el-table-column>
                <el-table-column prop="extractTime"
                                 label="最后抽取时间" min-width="15%">
                </el-table-column>

                <el-table-column label="操作" min-width="15%">
                    <template slot-scope="scope">
                        <el-link type="primary" v-on:click="showExtractDataDlg(scope.row.id)">抽取</el-link>
                    </template>
                </el-table-column>
            </el-table>
            <el-pagination background style="float:right;"
                           layout="total, prev, pager, next"
                           v-on:current-change="searchList"
                           v-bind:total="total"
                           v-bind:current-page.sync="pageIndex">
            </el-pagination>
        </div>
    </el-col>

    <el-dialog title="抽取数据" v-bind:visible.sync="extractDataDlg" top="5vh">
        <div style="min-height:250px;overflow-x:hidden;">
            <el-form :model="ruleForm" status-icon :rules="rules" ref="ruleForm" label-width="100px" class="demo-ruleForm">
                <el-form-item label="项目名称" prop="projectId">
                    <el-select v-model="ruleForm.projectId" placeholder="请选数据对应项目">
                        <el-option v-for="item in projectList"
                                   :key="item.id"
                                   :label="item.projectName"
                                   :value="item.id">
                        </el-option>
                    </el-select>
                </el-form-item>
                <el-form-item>
                    <el-button type="primary" v-on:click="extractData('ruleForm')">提交</el-button>
                    <el-button v-on:click="extractDataDlg=false">取消</el-button>
                </el-form-item>
            </el-form>
        </div>
    </el-dialog>
</div>

<script>
    var main = new Vue({
        'el': '#mainArea',
        data: function () {
            return {
                searchEngineDataList: [],
                total: 0,
                pageIndex: 1,
                loading: false,
                dataName: "",
                extractDataDlg: false,
                exportDataId: 0,
                ruleForm: {
                    projectId: ""
                },
                rules: {
                    projectId: [{ required: true, message: '请选数据对应项目', trigger: 'blur' }]
                },
                projectList: []

            };
        },
        methods: {
            onSearch: function () {
                this.pageIndex = 1;
                this.searchList();
            },
            searchList: function () {
                var param = {};
                param.pageIndex = this.pageIndex;
                param.pageSize = 10;
                param.dataName = this.dataName;
                this.loading = true;
                var that = this;
                $.ajax({
                    url: "/DataSet/SearchEngineDataList",
                    type: "GET",
                    data: param,
                    dataType: 'json',
                    success: function (data) {
                        if (data && data.success) {
                            that.searchEngineDataList = data.data;
                            that.total = data.total;
                        }
                        else {
                            console.log(data.msg);
                        }
                        that.loading = false;
                    }
                });
            },
            showExtractDataDlg: function (id) {
                this.extractDataDlg = true;
                this.exportDataId = id;
         
            },
            extractData: function (formName) {
                var param = this.ruleForm;
                param.exportDataId = this.exportDataId;
                var that = this;
                this.$refs[formName].validate((valid) => {
                    if (valid) {
                        $.ajax({
                            url: "/DataSet/ExtractSearchEngineData",
                            type: "Post",
                            data: param,
                            dataType: 'json',
                            success: function (data) {
                                that.extractDataDlg = false;
                                if (data && data.success) {
                                    that.$message({
                                        type: "success",
                                        message: data.msg
                                    });
                                }
                                else {
                                    that.$message({
                                        type: "error",
                                        message: data.msg
                                    });
                                    console.log(data.msg);
                                }
                            }
                        });

                    } else {
                        console.log('error submit!!');
                        return false;
                    }
                });
            }
        },
        mounted: function () {
            this.onSearch();
            //初始化下拉框值
            var that = this;
            $.ajax({
                url: "/Home/SearchProjectList",
                type: "GET",
                dataType: 'json',
                success: function (data) {
                    if (data && data.success) {
                        that.projectList = data.data;
                    }
                    else {
                        console.log(data.msg);
                    }
                }
            });
        }
    });

</script>
