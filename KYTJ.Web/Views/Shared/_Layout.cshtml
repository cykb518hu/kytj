@using KYTJ.Infrastructure.Model; 

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="format-detection" content="telephone=no">
    <link href="favicon.ico" rel="shortcut icon">
    <title>科研统计系统</title>
    <link rel="stylesheet" href="~/css/global.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/lib/layui/css/layui.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" />
    <script src="~/lib/layui/layui.all.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script src="~/lib/jquery/dist/jquery.cookie.min.js"></script>
    <script src="~/js/index.js"></script>
    <script src="~/datas/nav.js"></script>
</head>
<body>
    <div class="layui-layout layui-layout-admin" style="border-bottom: solid 5px #1aa094;">
        <div class="layui-header header">
            <div class="layui-main">
                <div class="admin-login-box">
                    <div class="logo" style="left: 0;">
                        <div>
                            <img src="@GlobalSetting.Logo" /><span style="color:white;margin-left:10px;vertical-align:middle;font-weight:bolder;font-size:17px;">数据智能化加工分析平台</span><span style="color:white;margin-left:10px;vertical-align:middle"></span>
                        </div>

                    </div>
                </div>
                <ul class="layui-nav admin-header-item">
                    <li class="layui-nav-item">
                        <a id="curDataSource" href="javascript:;"></a>
                    </li>
                    <li class="layui-nav-item">
                        <a href="javascript:;" class="admin-header-user">
                            <span id="spName">@ViewBag.UserName </span>
                        </a>
                        <dl class="layui-nav-child">
                            <dd id="logOut">
                                <a href="@Url.Action("LogOut","Home")"><i class="fa fa-sign-out" aria-hidden="true"></i> 注销</a>
                            </dd>
                        </dl>
                    </li>
                </ul>
            </div>
        </div>
        <div class="layui-side layui-bg-black" id="admin-side">
            <div class="layui-side-scroll" id="admin-navbar-side" lay-filter="side"></div>
            <div style="height:10%;">
                <img src="~/images/CompanyLogo160.png" style="width:60%;margin-top:8%;margin-left:5%;" />
            </div>

        </div>
        <div class="layui-body" style="bottom: 0;" id="admin-body">
            <div class="layui-tab admin-nav-card layui-tab-brief" lay-filter="admin-tab">
                <ul class="layui-tab-title">
                    <li class="layui-this">
                        <i class="fa fa-area-chart" aria-hidden="true"></i>
                        <cite>项目主页</cite>
                    </li>
                </ul>
                <div class="layui-tab-content" style="min-height: 150px; padding: 0px 0 0 0;">
                    <div class="layui-tab-item layui-show">

                        <iframe id="homeFram" src='@Url.Action("Index","Project")'>
                            @RenderBody()
                        </iframe>
                    </div>
                </div>
            </div>
        </div>
        <div class="layui-footer footer footer-demo" id="admin-footer">
            <div class="layui-main">
                <p>
                    上海柯林布瑞信息技术有限公司Copyright&copy; 2018~@DateTime.Now.AddYears(1).Year
                </p>
            </div>
        </div>
        <div class="site-tree-mobile layui-hide">
            <i class="layui-icon">&#xe602;</i>
        </div>
        <div class="site-mobile-shade"></div>
    </div>
</body>
</html>

<script>
    window.onload = function () {
        $("#spName").text(getUserName());

    }
    var ssoUserId = '';

    function getUserName() {
        var userName = $.cookie("UserName");
        return userName;
    }
</script>
